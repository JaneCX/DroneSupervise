<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
<item android:state_selected="true">
    <shape>
        <corners
            android:radius="3dp"
            />
        <solid
            android:color="#364257"
            android:angle="270"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="157dp"
            android:height="50dp"
            />
    </shape>
</item>
<item android:state_pressed="true">
    <shape>
        <corners
            android:radius="20dp"
            />
        <gradient
            android:startColor="#5C6779"
            android:endColor="#252D3C"
            android:angle="270"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="157dp"
            android:height="55dp"
            />
        <stroke
            android:width="3dp"
            android:color="#878787"
            />
    </shape>
</item>
<item>
    <shape>
        <corners
            android:radius="3dp"
            />
        <gradient
            android:startColor="#8290A8"
            android:endColor="#364257"
            android:angle="270"
        />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="157dp"
            android:height="55dp"
            />
        <stroke
            android:width="1dp"
            android:color="#FFFFFF"
            />
    </shape>
</item>
</selector>